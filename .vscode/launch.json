    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & Launch .NET Core",
            "type": "clr",
            "preLaunchTask": "build",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net40/win10-x64/SLang-Metrics-vs-code.exe",
            "args": ["in.txt"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Launch .NET Core",
            "type": "clr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net40/win10-x64/SLang-Metrics-vs-code.exe",
            "args": ["in.txt"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Test .NET Core",
            "type": "clr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net40/win10-x64/SLang-Metrics-vs-code.exe",
            "args": ["/test"],
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
