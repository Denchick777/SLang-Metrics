    "version": "2.0.0",
    "tasks": [
        {
            "label": "make_gplex",
            "command": "tools\\gplex.exe SLangScanner.lex",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "make_gppg",
            "dependsOn": "make_gplex",
            "command": "tools\\gppg.exe /gplex /conflicts SLangParser.y",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "make_parser",
            "dependsOn": "make_gppg"
        }
    ]
}