{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "make_gplex",
            "command": "gplex",
            "args": ["grammars\\SLangScanner.lex"],
            "type": "process",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "make_gppg",
            "dependsOn": "make_gplex",
            "command": "gppg",
            "args": ["/gplex", "/conflicts", "grammars\\SLangParser.y"],
            "type": "process",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "build",
            "dependsOn": "make_gppg",
            "command": "dotnet publish -c Release -r win10-x64",
            "args": ["SLang-Metrics-vs-code.csproj"],
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}
